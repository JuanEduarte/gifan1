<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sales_reports_wizard" model="ir.ui.view">
      <field name="name">sales.reports.wizard.wizard</field>
      <field name="model">sales.reports.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="start_date" />
            <field name="end_date" />
          </group>

          <group>
          <group>
          <field name="client_param1"/>
          <field name="client_param2"/>
          </group>
            
          <group>
          <field name="product_param1"/>
          <field name="product_param2"/>
          </group>
        </group>

        </form>
        <footer>
          <button name="get_sale_report" string="Crear reporte" type="object" class="btn-primary" />
          <button string="Cancel" special="cancel" class="oe_link" />
      </footer>
      </field>
    </record>

    <record id="sales_report_wizard_action" model="ir.actions.act_window">
      <field name="name">Reportes de ventas</field>
      <field name="res_model">sales.reports.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

   <menuitem
    id="sales_reports_menu"
    name="Reportes de ventas"
    parent="sale.menu_sale_report"
    action='sales_report_wizard_action'
   />


</odoo>