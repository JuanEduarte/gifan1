<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.move inherit form view -->
    <record id="account_move_inherit_form_view_id_gip" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form.gip</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='purchase_vendor_bill_id']" position="before">
                <!-- Add your fields here -->
                <field name="gif_no_show_pediment" invisible='1'/>
                <field name="gif_has_pediment" attrs="{'invisible': [('gif_no_show_pediment', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>