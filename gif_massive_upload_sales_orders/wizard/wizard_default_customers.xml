<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- default customers form view -->
    <record id="default_customers_view_form" model="ir.ui.view">
        <field name="name">default.customers.view.form</field>
        <field name="model">default.customers</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="gif_partner_soriana"/>
                        <field name="gif_partner_cityfresko"/>
                        <field name="gif_partner_chedraui"/>
                        <field name="gif_partner_liverpool"/>
                        <field name="gif_partner_heb"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Guardar" class="btn-primary" name="write_vals" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- default customers action window -->
    <record id="default_customers_name_action" model="ir.actions.act_window">
        <field name="name">Fichas de cliente</field>
        <field name="res_model">default.customers</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="default_customers_menu_act" name="Fichas de clientes" parent="massive_uploader_menu_categ" action="default_customers_name_action" sequence="1"/>
</odoo>