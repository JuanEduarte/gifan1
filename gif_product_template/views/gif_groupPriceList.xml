                          <field name="categ_id" string="CategorÃ­a de producto" on_change="1" can_create="true" can_write="true" modifiers="{&quot;required&quot;: true}"/>
      <field name="company_id" options="{'no_create': True}" on_change="1" can_create="true" can_write="true" modifiers="{}"/>
                      </group>
                   </xpath>
        </field>
    </record>
</odoo>