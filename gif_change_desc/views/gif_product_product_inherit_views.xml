<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- product.template inherit tree view -->
    <record id="product_template_inherit_product_gdc" model="ir.ui.view">
        <field name="name">product.template.inherit.view.tree.gcd</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='default_code']" position="after">
                <!-- Add your fields here -->
                <field name="description_sale"/>
                <field name="description_purchase"/>
            </xpath>
            <xpath expr="//field[@name='responsible_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="attributes">
                <!-- Add your fields here -->
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <!-- Add your fields here -->
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>