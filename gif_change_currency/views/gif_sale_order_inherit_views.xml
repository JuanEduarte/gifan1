<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sale.order inherit form view -->
    <record id="sale_order_inherit_change_currency_view_id" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form.change.currency</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- attrs="{'invisible': [('gif_own_currency_check_sale','=',False)]}" -->
            <xpath expr="//field[@name='payment_term_id']" position="before">
                <field name="gif_is_usd" invisible="1"/>
                <field name="gif_own_currency_check_sale" attrs="{'readonly': [('state','=','done')],'invisible': [('gif_is_usd','=',False)]}"/>
                <field name="gif_own_inverse_currency" attrs="{'readonly': ['|',('state','=','done'),('gif_own_currency_check_sale','=',False)], 'invisible': [('gif_is_usd','=',False)]}" />
                <field name="gif_write_code" invisible="1"/>
            </xpath>
            
        </field>
    </record>
</odoo>