<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="purchase_order_inherit_form_view_id_ve" model="ir.ui.view">
        <field name="name">purchase.order.inherit.view.form.ve</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="gif_is_usd" invisible="1"/>
                <field name="gif_own_currency_check_purchase" attrs="{'readonly': [('state','=','done')],'invisible': [('gif_is_usd','=',False)]}"/>
                <field name="gif_own_inverse_currency_purchase" attrs="{'readonly': ['|',('state','=','done'),('gif_own_currency_check_purchase','=',False)],'invisible': [('gif_is_usd','=',False)]}"/>
                <field name="gif_wr_code" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>