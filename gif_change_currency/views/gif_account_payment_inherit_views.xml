<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.payment inherit form view -->
    <!-- Vista account payment -->
    <record id="account_payment_form_inehrit_view_id_gcc" model="ir.ui.view">
        <field name="name">account.payment.inherit.view.form.gcc</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='date']" position="before">
                <!-- Add your fields here -->
                <field name="gif_is_usd" invisible="1"/>
                <field name="gif_manual_currency" attrs="{'readonly': [('state','=','done')],'invisible': [('gif_is_usd','=',False)]}"/>
                <field name="gif_inverse_currency" attrs="{'readonly': ['|',('gif_manual_currency','=',False),('state','=','done')],'invisible': [('gif_is_usd','=',False)]}"/>
            </xpath>        
        </field>
    </record>

    <!-- Vista acount payment register -->
    <record id="account_payment_register_inherit_form_view_id_gcc" model="ir.ui.view">
        <field name="name">account.payment.register.inherit.view.form.gcc</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_date']" position="before">
                <!-- Add your fields here -->
                <field name="gif_is_usd" invisible="1"/>
                <field name="gif_manual_currency" attrs="{'invisible': [('gif_is_usd','=',False)]}"/>
                <field name="gif_inverse_currency" attrs="{'readonly': [('gif_manual_currency','=',False)],'invisible': [('gif_is_usd','=',False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>