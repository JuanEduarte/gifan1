<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- stock.picking inherit form view -->
    <record id="stock_picking_inherit_view_id_gcc" model="ir.ui.view">
        <field name="name">stock.picking.inherit.view.form.gcc</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='owner_id']" position="after">
                <!-- Add your fields here -->
                <field name="gif_check_currency" attrs="{'readonly': [('state','=','done')]}"/>
                <field name="gif_custom_currency" attrs="{'readonly': ['|',('state','=','done'),('gif_check_currency','=',False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>