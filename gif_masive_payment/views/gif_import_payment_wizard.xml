<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  
    <record id="set_open_form" model="ir.ui.view">
      <field name="name">gif.masive.payment.form</field>
      <field name="model">gif.masive.payment</field>

      <field name="arch" type="xml">

        <form>
          <header>
                        
            <button name="return_payment" string="Validar" type="object"/>
           
          </header>
          <group class="col_2">
            <group>
              <field name="file_data" filename="file_name" widget="binary" required="1"/>
              <field name='gif_journal' required='True' />
              <field name="date_up"/>
              <field name="date_vd"/>
              <field name="Payment_type"/>
              <field name="client"/>
            </group>
            <group>
              <field name="Memo"/>
              <field name="account"/>
              <field name="total"/>
              <button string="Importar" name="files_data" type="object" class="btn-primary"/>
            </group>
          </group>
          <notebook>
            <page string="Detalles del personal">
              <field name="gif_masive_payment_wzr" >
                <tree editable="botton">
                  <field name="client"/>
                  <field name="invoice_id"/>
                  <field name="amount" />
                </tree>
              </field>
            </page>
          </notebook>

        </form>
      </field>
    </record>

    <record id="set_open_view_tree" model="ir.ui.view">
      <field name="name">gif.masive.payment.view.tree</field>
      <field name="model">gif.masive.payment</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="client"/>
          <field name="invoice_id"/>
          <field name="amount" />
        </tree>
      </field>
    </record>

  

  <record id="action_import_payment_order" model="ir.actions.act_window">
    <field name="name">Pagos Masivos</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">gif.masive.payment</field>
    <field name="view_mode">tree,form</field>
  </record>

<menuitem  id="sale_order_menu_import" name="Pago Masivo" parent="account.menu_finance_receivables"  action="action_import_payment_order"/>


</odoo>