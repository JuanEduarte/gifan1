<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="consignment_note_tree">
            <field name="name">nama.model.tree</field>
            <field name="model">nama.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="consignment_note_form">
            <field name="name">nama.model.form</field>
            <field name="model">nama.model</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="carta_porte_action">
            <field name="name">Nama Model</field>
            <field name="res_model">nama.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id="main_carta_porte"
            name="Nama Model"
        />

        <menuitem 
            id="menu_carta_porte"
            name="Nama Model"
            parent="main_carta_porte"
        />

        <menuitem 
            id="submenu_carta_porte"
            name="Nama Model"
            parent="menu_carta_porte"

            action="carta_porte_action"
        />

    </data>
</odoo>