<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <!-- stock.move.line inherit form view -->
        <record id="stock_move_line_inherit_view1_form" model="ir.ui.view">
            <field name="name">stock.move.line.inherit.view.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='lot_id']" position="before">
                    <xpath expr="//field[@name='expiration_date']" position="move"/>
                </xpath>
            </field>
        </record>


        <record id="stock_move_tree_view2_id" model="ir.ui.view">
            <field name="name">stock.move.line.inherit.view.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='lot_id']" position="before">
                    <field name="expiration_date"/>
                </xpath>
                
            </field>
        </record>

    
        <record id="stock_move_tree_view3_id" model="ir.ui.view">
            <field name="name">stock.move.line.inherit.view.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">

            <xpath expr="//field[@name='lot_id']" position="before">
                    <field name="cct_expiration_date"/>
            </xpath>
            </field>
        </record>

</odoo>