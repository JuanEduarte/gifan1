<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- product.template inherit form view -->
    <record id="product_template_inherit_view_id_gmf" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form.gmf</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="gif_active" />
                    <label for="gif_active" />
                </span>
            </xpath>

            <!-- <xpath expr="//field[@name='barcode']" position="after"> -->
            <xpath expr="//group[2]" position="inside">
                <!-- Add your fields here -->
                <field name="gif_business_rel" />
                <field name="gif_category_rel" />
                <field name="gif_has_ieps" />
                <field name="gif_type_rel" />
                <field name="gif_subtype_rel"/>
                <field name="gif_cate_rel"/>
                <field name="gif_subcategory_rel"/>
                <field name="gif_form"/>
                <field name="gif_brand_ids" />                
            </xpath>

            <xpath expr="//page[@name='sales']/group[@name='gif_type_product_seg_sal']" position="inside">
                <!-- Add your fields here -->
                <field name="gif_ieps_sale_por"/>
                <field name="gif_ieps_sale_fij"/>
            </xpath>

            <xpath expr="//group[@name='gif_type_product_seg_pur']" position="inside">
                <!-- Add your fields here -->
                <field name="gif_ieps_purchase_por"/>
                <field name="gif_ieps_purchase_fij"/>
            </xpath>

            <xpath expr="//field[@name='unspsc_code_id']" position="after">
                <!-- Add your fields here -->
                <field name="gif_hazard_active"/>
            </xpath>

            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <!-- Add your fields here -->
                <field name="gif_unit_content"/>
                <field name="gif_height"/>
                <field name="gif_width"/>
                <field name="gif_depth"/>
                <field name="gif_weight"/>
                <field name="gif_originCountry"/>
                <field name="gif_countryCode"/>
                <field name="gif_bed_number"/>
                <field name="gif_bed_pallet"/>
                <field name="gif_package_pallet"/>
                <field name="gif_pieces_pallet"/>
            </xpath>

        </field>
    </record>
</odoo>