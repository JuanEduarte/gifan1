<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- gif.business.line tree view -->
    <record id="gif_business_line_view_tree" model="ir.ui.view">
        <field name="name">gif.business.line.view.tree</field>
        <field name="model">gif.business.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gif_active_line"/>
            </tree>
        </field>
    </record>

    <!-- gif.business.line form view -->
    <record id="gif_business_line_view_form" model="ir.ui.view">
        <field name="name">gif.business.line.view.form</field>
        <field name="model">gif.business.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gif_active_line"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- gif.business.line action window -->
    <record id="gif_business_line_action" model="ir.actions.act_window">
        <field name="name">gif.business.line.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gif.business.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No existen líneas de negocio.
            </p><p>
                Por favor cree una línea de negocio.
            </p>
        </field>
    </record>

    <menuitem id="gif_business_line_menu_act" name="Líneas de negocio" parent="stock.menu_stock_general_settings" action="gif_business_line_action" sequence="200"/>
</odoo>