<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- wizard.notification.reload form view -->
    <record id="wizard_notification_reload_view_form" model="ir.ui.view">
        <field name="name">wizard.notification.reload.view.form</field>
        <field name="model">wizard.notification.reload</field>
        <field name="arch" type="xml">
            <form string="Resumer de carga de XML">
                <sheet>
                    <group>
                        <field name="text_notification"/>
                    </group>
                    <footer>
                        <button name="refresh" type="object" string="Aceptar" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- wizard.notification action window -->
    <record id="wizard_notification_reload_action" model="ir.actions.act_window">
        <field name="name">Notificación</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.notification.reload</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- wizard.notification form view -->
    <record id="wizard_notification_view_form" model="ir.ui.view">
        <field name="name">wizard.notification.view.form</field>
        <field name="model">wizard.notification</field>
        <field name="arch" type="xml">
            <form string="Notificación">
                <sheet>
                    <group>
                        <field name="text_notification"/>
                    </group>
                    <footer>
                        <button name="refresh" type="object" string="Aceptar" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- wizard.notification action window -->
    <record id="wizard_notification_action" model="ir.actions.act_window">
        <field name="name">Notificación</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.notification</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>