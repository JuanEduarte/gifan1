    <record id="gif_desgloseIEPS" model="ir.ui.view">
        <field name="name">gif.desgloseIEPS</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']/field[@name='property_product_pricelist']" position="after">
                <field name="gif_ieps_desglose" />
            </xpath>
        </field>
    </record>



    <record id="gif_saleOrderFieldIEPS" model="ir.ui.view">
        <field name="name">gif.saleOrderFieldIEPS</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position = "before" > 
                <field name = "gif_SaleOrderIeps" force_save="1" invisible="context.get('order_id.gif_IepsDisplay')" />
                <field name = "gif_SaleOrderIepsChar" class="text-right" force_save="1" />
                <field name = "gif_IepsDisplay" invisible="1" />
            </xpath>
        </field>
    </record>



    <record id="gif_purchaseOrderFieldIEPS" model="ir.ui.view">
        <field name="name">gif.purchaseOrderFieldIEPS</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position = "before" > 
                <!--  
                <field name = "gif_PurchaseOrderIeps" attrs="{'invisible': [('gif_IepsDisplay','==',True)]}" />
                
                <field name = "gif_PurchaseOrderIeps" invisible="context.get('order_id.gif_IepsDisplay')" />
                -->
                <field name = "gif_PurchaseOrderIeps" invisible="0" />
                
                
                <field name = "gif_IepsDisplay" invisible="1"/>
            </xpath>
        </field>
    </record>



    <record id="gif_acountMoveFieldIEPS" model="ir.ui.view">
        <field name="name">gif.accountMoveFieldIEPS</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position = "before" > 
                <field name = "gif_AccountMoveIeps"/>
                <field name = "gif_IepsDisplay" invisible="1"/>
            </xpath>
        </field>
    </record>



</odoo>