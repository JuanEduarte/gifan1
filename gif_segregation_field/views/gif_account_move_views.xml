<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.move inherit form view -->
    <record id="account_move_view_id" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='tax_cash_basis_origin_move_id']" position="after">
                <!-- Add your fields here -->
                <field name="type_of_purchase" attrs="{'invisible': [('move_type', 'not in', ('in_invoice','in_refund','in_receipt'))]}" options="{'no_open': False, 'no_create_edit': True, 'no_create': True}"/>
                <field name="type_of_sale" attrs="{'invisible': [('move_type', 'not in', ('out_invoice','out_refund','out_receipt'))]}" options="{'no_open': False, 'no_create_edit': True, 'no_create': True}"/>
            </xpath>
            
        </field>
    </record>
</odoo>