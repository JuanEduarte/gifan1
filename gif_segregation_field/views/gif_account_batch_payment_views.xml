<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.batch.payment inherit form view -->
    <record id="account_batch_view_id" model="ir.ui.view">
        <field name="name">account.batch.payment.inherit.view.form</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <!-- Add your fields here -->
                <field name="type_of_sale" string="Tipo de pago" attrs="{'invisible': [('batch_type', '!=', 'inbound')]}" options="{'no_open': False, 'no_create_edit': True, 'no_create': True}"/>
                
            </xpath>
            
        </field>
    </record>
</odoo>