<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.payment inherit form view -->
    <record id="account_payment_view_id" model="ir.ui.view">
        <field name="name">account.payment.inherit.view.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//group[@name='group1']//field[@name='date']" position="after">
                <!-- Add your fields here -->
                <field name="type_of_purchase" string="Tipo de pago en Compra" attrs="{'invisible':['|', ('partner_type','!=','supplier'), ('is_internal_transfer', '=', True)]}" options="{'no_open': False, 'no_create_edit': True, 'no_create': True}"/>
                <field name="type_of_sale" string="Tipo de pago en Venta" attrs="{'invisible':['|', ('partner_type','!=','customer'), ('is_internal_transfer', '=', True)]}" options="{'no_open': False, 'no_create_edit': True, 'no_create': True}"/>
                
            </xpath>
            
        </field>
    </record>
</odoo>